        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>



        <Label
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Margin="5,5,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Previous words"
            FontFamily="pack://application:,,,/Resources/Fonts/#Scrabbles"
            FontSize="90"
            Foreground="#000000" />

        <Border
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Margin="15,0,25,12"
            Background="#eeeeee"
            BorderThickness="0"
            CornerRadius="20">
            <DataGrid
                GridLinesVisibility="Vertical"
                ColumnWidth="240"
                FontSize="20"
                ItemsSource="{Binding PreviousWords}"
                IsReadOnly="True"/>
        </Border>

    </Grid>
